# Environment Variables for Development
# Copy this to .env and update the MongoDB connection strings after Atlas setup

# Database Connections (UPDATE THESE AFTER ATLAS SETUP)
MONGODB_PRODUCTDESIGNER_CONNECTION=mongodb+srv://agenticuser:<password>@agenticorderingcluster.xxxxx.mongodb.net/ProductDesigner_DB?retryWrites=true&w=majority
MONGODB_CMP_CONNECTION=mongodb+srv://agenticuser:<password>@agenticorderingcluster.xxxxx.mongodb.net/CMP_DB?retryWrites=true&w=majority

# Development Settings
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://localhost:5001

# AI Integration (for later phases)
PERPLEXITY_API_KEY=your_key_here
PERPLEXITY_BASE_URL=https://api.perplexity.ai

# Logging
LOG_LEVEL=Information
ENABLE_DETAILED_LOGGING=true

# Features
ENABLE_AI_FEATURES=true
ENABLE_MOCK_DATA=true

# Security (for later)
JWT_SECRET=your_jwt_secret_here_minimum_32_characters
JWT_EXPIRY_HOURS=24

# CORS Settings
ALLOWED_ORIGINS=http://localhost:4200,https://localhost:4200
